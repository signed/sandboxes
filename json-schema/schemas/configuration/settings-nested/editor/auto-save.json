{
  "$schema": "http://json-schema.org/draft-06/schema/schema",
  "title": "AutoSave",
  "description": "Automatically save changes",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "value"
  ],
  "properties": {
    "type": {
      "const": "editor.auto-save"
    },
    "value": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "value",
        "interval"
      ],
      "properties": {
        "value": {
          "type": "boolean"
        },
        "interval": {
          "type": "number"
        }
      }
    }
  }
}

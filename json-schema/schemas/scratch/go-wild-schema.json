{
  "$comment": "https://bcherny.github.io/json-schema-to-typescript-browser/",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "resource:/schemas/results_schema#",
  "additionalProperties": false,
  "type": "object",
  "title": "Language",
  "description": "The language used in the user interface",
  "required": [
    "type",
    "value"
  ],
  "properties": {
    "type": {
      "const": "general.language"
    },
    "value": {
      "title": "SupportedLanguage",
      "type": "string",
      "enum": [
        "EO",
        "EN",
        "ZH",
        "ES"
      ],
      "default": "EN"
    }
  }
}

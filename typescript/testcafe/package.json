{
  "name": "testcafe-sandbox",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "testcafe:run": "testcafe chrome fixtures/**/*.ts",
    "testcafe:headless": "testcafe chrome:headless fixtures/**/*.ts --reporter spec,xunit:reports/report.xml,json:reports/report.json",
    "testcafe:debug": "testcafe $NODE_DEBUG_OPTION chrome",
    "testcafe:ci": "start-server-and-test start http://localhost:8080 testcafe:headless",
    "coverage": "jest --coverage --collectCoverageFrom=src/*.ts",
    "start": "webpack-dev-server --mode development",
    "start:dev": "yarn start --open"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "testRegex": ".*\\.tests\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "displayName": "catch me",
    "notify": true,
    "notifyMode": "failure-success",
    "resetMocks": true
  },
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/react": "16.8.20",
    "@types/react-dom": "16.8.4",
    "awesome-typescript-loader": "5.2.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.8.0",
    "start-server-and-test": "1.9.1",
    "testcafe": "1.2.1",
    "testcafe-react-selectors": "3.1.0",
    "ts-jest": "24.0.2",
    "tslint": "5.17.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.5.2",
    "webpack": "4.34.0",
    "webpack-cli": "3.3.4",
    "webpack-dev-server": "3.7.2"
  }
}

{
  "name": "testcafe-sandbox",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "jest",
    "testcafe": "testcafe chrome fixtures/**/*.ts",
    "testcafe:headless": "testcafe chrome:headless fixtures/**/*.ts",
    "testcafe:debug": "testcafe $NODE_DEBUG_OPTION chrome",
    "coverage": "jest --coverage --collectCoverageFrom=src/*.ts",
    "start": "webpack-dev-server --open --mode development"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "testRegex": ".*\\.tests\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "displayName": "catch me",
    "notify": true,
    "notifyMode": "failure-success",
    "resetMocks": true
  },
  "dependencies": {
    "react": "16.8.1",
    "react-dom": "16.8.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.0",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "awesome-typescript-loader": "5.2.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.1.0",
    "testcafe": "1.0.0",
    "testcafe-react-selectors": "3.0.3",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.3.3",
    "webpack": "4.29.3",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  }
}

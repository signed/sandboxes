{
  "name": "template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage --collectCoverageFrom=src/*.ts"
  },
  "jest": {
    "roots": ["<rootDir>/src/", "<rootDir>/tests/"],
    "testRegex": ".*\\.tests\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "displayName": "catch me",
    "notify": true,
    "notifyMode": "failure-success",
    "resetMocks": true
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "jest": "23.5.0",
    "ts-jest": "23.1.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "typescript": "3.0.1"
  }
}

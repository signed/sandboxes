<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
        version="2.0"
        >
    <namespace>http://github.com/signed</namespace>
    <tag>
        <tag-name>input</tag-name>
        <source>../tags/input.xhtml</source>
        <attribute>
            <description>The text to display at the start</description>
            <name>label</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>secretvalidator</tag-name>
        <validator>
            <validator-id>validator.secret</validator-id>
        </validator>
    </tag>
</facelet-taglib>